{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "ES6",
    "module": "NodeNext", 
    "moduleResolution": "nodenext", 
    "outDir": "./dist",
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types"],
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*",
    "test/**/*" 
  ],
  "exclude": ["node_modules"]
}